mixin button({text, isSecondary, isExtended, isSmall} = {})
	-
		text = text || 'Click me';
		let bordered = isBordered ? 'button_bordered' : false;
		let extended = isExtended ? 'button_extended' : false;
		let small = isSmall ? 'button_small' : false;

	button.button(class=[bordered, extended, small])
		.button__content= text
		if (extended != false)
			i.button__arrow.material-icons arrow_forward

		
