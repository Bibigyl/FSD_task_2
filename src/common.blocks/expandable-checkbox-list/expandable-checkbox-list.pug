include ../checkbox-button/checkbox-button

mixin expandable-checkbox-list({title, items, isOpen=false})

	-let open = isOpen ? 'expandable-checkbox-list_open' : ''

	.expandable-checkbox-list(class=open)
		h3.expandable-checkbox-list__title= title
		.expandable-checkbox-list__arrow.material-icons expand_more

		ul.expandable-checkbox-list__list
			each item in items
				li.expandable-checkbox-list__item
					+checkbox-button(item)
			

