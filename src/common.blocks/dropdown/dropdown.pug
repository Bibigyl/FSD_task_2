include ../icon-link/icon-link

mixin dropdown({content = {text, items, buttons}, isOpen, isSmall})
	-	
		let open = isOpen ? 'dropdown_open' : false;
		let small = isSmall ? 'dropdown_small' : false;

	.dropdown(class=[open, small] initialText=content.text)
		.dropdown__field
			span.dropdown__text= content.text
			i.dropdown__arrow.material-icons expand_more

		.dropdown__list
			ul
				each item in content.items
					li.dropdown__item(item=item)= item
						button.dropdown__button.dropdown__button_minus.dropdown__button_not-active -
						span.dropdown__num 0
						button.dropdown__button.dropdown__button_plus +

			
			if content.buttons
				.dropdown__button_to-clear.hidden
					+icon-link({text: content.buttons[0]})
				.dropdown__button_to-apply
					+icon-link({text: content.buttons[1], isPrimary: true})



			

