doctype html
html(lang="ru")
    head
        meta(charset = 'utf-8')
        meta(name='viewport' content="initial-scale=1.0, width=device-width")
        title Search-room
        link(rel="stylesheet" href="style.css")
        link(rel="apple-touch-icon" sizes="152x152" href="favicon/apple-touch-icon.png")
        link(rel="icon" type="image/png" sizes="32x32" href="favicon/favicon-32x32.png")
        link(rel="icon" type="image/png" sizes="16x16" href="favicon/favicon-16x16.png")
        link(rel="manifest" href="favicon/site.webmanifest")
        link(rel="mask-icon" href="favicon/safari-pinned-tab.svg" color="#5bbad5")
        meta(name="msapplication-TileColor" content="#da532c")
        meta(name="theme-color" content="#ffffff")
    body.search-room.page_language_ru
        include ../../components/header/header.pug
        +header(
            "search-room__header header_language_ru",
        [
            {name: "О нас", href: "#"},
            {name: "Услуги", href: "#", arrow: true},
            {name: "Вакансии", href: "#"},
            {name: "Новости", href: "#"},
            {name: "Соглашения", href: "#", arrow: true},
        ],
            {name: "Войти"}, 
            {name: "Зарегистрироваться"}, 
            {name: "Cosmin Negoita", class: "hidden"}
        )
        .container.search-room-container
            .options
                .option-wrap.date-search-option
                    label.label
                        h3 Даты пребывания в отеле
                        input.input.input_middle#search-room__date-search
                        .input__arrow.arrow
                            i.material-icons expand_more


                .option-wrap.dropdown.dropdown_guests
                    h3 Гости
                    .dropdown__field <span>Сколько гостей</span>
                        .dropdown__arrow.arrow
                            i.material-icons expand_more
                    .dropdown-ul-wrap
                        ul
                            li 
                                span.dropdown__button.dropdown__button_plus +
                                span.dropdown__num 0
                                span.dropdown__button.dropdown__button_minus.dropdown__button_not-active -
                                |Взрослые
                            li 
                                span.dropdown__button.dropdown__button_plus +
                                span.dropdown__num 0
                                span.dropdown__button.dropdown__button_minus.dropdown__button_not-active -
                                |Дети
                            li 
                                span.dropdown__button.dropdown__button_plus +
                                span.dropdown__num 0
                                span.dropdown__button.dropdown__button_minus.dropdown__button_not-active -
                                |Младенцы
                        a.link.dropdown__link_clear.link_grey.hidden Очистить
                        a.link.dropdown__link_apply.link_colored Применить

                .option-wrap.slider
                    h3 Диапазон цены
                    .slider-range
                        .slider-wrapper
                            #slider-range
                        .range-wrapper
                            .range
                    p.slider__text Стоимость за сутки пребывания в номере

                .option-wrap.checkboxes
                    h3 Checkbox buttons
                    label.label.ui-label.label_checkbox
                        input.checkbox(type="checkbox")
                        .checkbox__text Можно курить
                    label.label.ui-label.label_checkbox
                        input.checkbox(type="checkbox" checked)
                        .checkbox__text Можно с питомцами
                    label.label.ui-label.label_checkbox
                        input.checkbox(type="checkbox" checked)
                        .checkbox__text Можно пригласить гостей </br>(до 10 человек)
                
                .option-wrap.rich-checkbox-list
                    h3 Доступность
                    ul
                        li
                            label.label.label_checkbox
                                input.checkbox(type="checkbox")
                                .checkbox__text Широкий коридор
                                p Ширина коридоров в номере</br>не менее 91 см.
                        li
                            label.label.label_checkbox
                                input.checkbox(type="checkbox")
                                .checkbox__text Помощник для инвалидов
                                p На 1 этаже вас встретит специалист и проводит до номера

                
                .option-wrap.dropdown.dropdown_middle.dropdown_furniture
                    h3 Удобства номера
                    .dropdown__field <span>2 спальни, 2 кровати...</span>
                        .dropdown__arrow.arrow
                            i.material-icons expand_more
                    .dropdown-ul-wrap
                        ul
                            li 
                                span.dropdown__button.dropdown__button_plus +
                                span.dropdown__num 2
                                span.dropdown__button.dropdown__button_minus -
                                |Спальни
                            li 
                                span.dropdown__button.dropdown__button_plus +
                                span.dropdown__num 2
                                span.dropdown__button.dropdown__button_minus -
                                |Кровати
                            li 
                                span.dropdown__button.dropdown__button_plus +
                                span.dropdown__num 0
                                span.dropdown__button.dropdown__button_minus.dropdown__button_not-active -
                                |Ванные комнаты

                .option-wrap.checkbox-list
                    h3 Дополнительные удобства
                    .checkbox-list__arrow.arrow
                        i.material-icons expand_more
                    ul
                        li
                            label.label.label_checkbox
                                input.checkbox(type="checkbox")
                                .checkbox__text Завтрак
                        li
                            label.label.label_checkbox
                                input.checkbox(type="checkbox" checked)
                                .checkbox__text Письменный стол
                        li
                            label.label.label_checkbox
                                input.checkbox(type="checkbox" checked)
                                .checkbox__text Стул для кормления
                        li
                            label.label.label_checkbox
                                input.checkbox(type="checkbox" checked)
                                .checkbox__text Кроватка
                        li
                            label.label.label_checkbox
                                input.checkbox(type="checkbox")
                                .checkbox__text Телевизор
                        li
                            label.label.label_checkbox
                                input.checkbox(type="checkbox")
                                .checkbox__text Шампунь
                        li
                            label.label.label_checkbox
                                input.checkbox(type="checkbox")
                                .checkbox__text Телевизор
                        li
                            label.label.label_checkbox
                                input.checkbox(type="checkbox")
                                .checkbox__text Шампунь

            .rooms-wrap
                header    
                    h1 Номера, которые мы для вас подобрали
                .rooms
                    include ../../components/room-card/room-card.pug
                    +room("search-room__room-card", `background-image: url( ${require('./images/1.jpg')})`, 888, 9990, 5, "rating1_", 145, true)
                    +room("search-room__room-card", `background-image: url( ${require('./images/2.jpg')})`, 840, 9900, 4, "rating2_", 65)
                    +room("search-room__room-card", `background-image: url( ${require('./images/3.jpg')})`, 980, 8500, 3, "rating3_", 35, true)
                    +room("search-room__room-card", `background-image: url( ${require('./images/4.jpg')})`, 856, 7300, 5, "rating4_", 19)
                    +room("search-room__room-card", `background-image: url( ${require('./images/5.jpg')})`, 740, 6000, 4, "rating5_", 44)
                    +room("search-room__room-card", `background-image: url( ${require('./images/6.jpg')})`, 982, 5800, 3, "rating6_", 56)
                    +room("search-room__room-card", `background-image: url( ${require('./images/7.jpg')})`, 678, 5500, 5, "rating7_", 45)
                    +room("search-room__room-card", `background-image: url( ${require('./images/8.jpg')})`, 450, 5300, 4, "rating8_", 39)
                    +room("search-room__room-card", `background-image: url( ${require('./images/9.jpg')})`, 350, 5000, 3, "rating9_", 77)
                    +room("search-room__room-card", `background-image: url( ${require('./images/10.jpg')})`, 666, 5000, 5, "rating10_", 25)
                    +room("search-room__room-card", `background-image: url( ${require('./images/11.jpg')})`, 444, 5000, 3, "rating11_", 15)
                    +room("search-room__room-card", `background-image: url( ${require('./images/12.jpg')})`, 352, 5000, 3, "rating12_", 55)

                .paginator-wrap
                    .pagination
                    .pagination__arrow.arrow
                        i.material-icons arrow_forward
                    .pagination__text <span>1 – 12 из 100+</span> вариантов аренды

        hr
        include ../../components/footer/footer.pug
        +footer(
            "search-room__footer",
            "Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»",
            [
                {title: "Навигация", items: ["О нас", "Новости", "Служба поддержки", "Услуги"]},
                {title: "О нас", items: ["О сервисе", "Наша команда", "Вакансии", "Инвесторы"]},
                {title: "Служба поддержки", items: ["Соглашения", "Сообщества", "Связь с нами"]}
            ],
            {title: "Подписка", text: "Получайте специальные предложения и новости сервиса", button_text: "Email"},
            "Copyright © 2018 Toxin отель. Все права зачищены."
        )

        script(src="search-room.js")
        script(src="http://localhost:35729/livereload.js")
