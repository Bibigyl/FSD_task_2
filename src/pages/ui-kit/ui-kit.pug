							h2 Green</br><span>#6FCF97</span>

				div(class="fonts")
					div(class="font-item")
						div(class="font-item__tag")
							h1 H1
						h1(class="font-item__desc") This one is the sub-section or widget title
					div(class="font-item")
						div(class="font-item__tag")
							h2 H2
						h2(class="font-item__desc") Next one is the item title inside widgets
					div(class="font-item")
						div(class="font-item__tag")
							h3 H3
						h3(class="font-item__desc") This is a label or cta text
					div(class="font-item")
						div(class="font-item__tag")
							span Body
						span(class="font-item__desc") This is the body text which is used for most</br> of the design, like paragraphs, lists, etc.
		
		section(class="ui-section ui-section_white form-elements")
			div(class="ui-logo")
				include ../../common.blocks/logo/ui-logo.pug
			container(class="ui-container ui-form-blocks-1")
				div(class="ui-column")
					div(class="ui-form-block")
						label(class="label ui-label")
							h3 Text field
							input(class="input input_size_big" placeholder="Email")
							span(class="ui-field-state") Default
						label(class="label ui-label")
							h3 Text field
							input(class="input ui-input_hover input_size_big" placeholder="This is pretty awesome")
							span(class="ui-field-state") Hover / Focus
						label(class="label ui-label")
							h3 Dropdown
							select(class="select select_size_big")
								option(value="" disabled selected hidden) Сколько гостей
								option 1
								option 2
								option 3
								option 4
							div(class="select__arrow")
								i(class="material-icons") expand_more
							span(class="ui-field-state") Default
						label(class="label ui-label")
							h3 Masked text field
							input(class="input input_size_big input_masked_date" placeholder="ДД/ММ/ГГГГ")
							span(class="ui-field-state") Default

					div(class="ui-form-block ui-form-block_inline")
						label(class="label ui-label")
							h3 Date dropdown
							select(class="select select_size_small")
								option(value="" disabled selected hidden) ДД.ММ.ГГГГ
								option 1
								option 2
								option 3
								option 4
							div(class="select__arrow")
								i(class="material-icons") expand_more
						label(class="label ui-label")
							h3 Date dropdown
							select(class="select select_size_small")
								option(value="" disabled selected hidden) 19.08.2019
								option 1
								option 2
								option 3
								option 4
							div(class="select__arrow")
								i(class="material-icons") expand_more

					div(class="ui-form-block")
						label(class="label ui-label")
							h3 Filter date dropdown
							select(class="select select_size_middle")
								option(value="" disabled selected hidden) 19 авг - 23 авг
								option 1
								option 2
								option 3
								option 4
							div(class="select__arrow")
								i(class="material-icons") expand_more

					div(class="ui-form-block")
						label(class="label ui-label")
							h3 Subscription text field
							input(class="input input_size_middle" placeholder="Email")
							div(class="input__arrow")
								i(class="material-icons") arrow_forward

				div(class="ui-column")
					div(class="ui-form-block")
						h3 Checkbox buttons
						label(class="label ui-label label_type_checkbox")
							input(class="input_type_checkbox" type="checkbox")
							div(class="checkbox-text") Можно курить
						label(class="label ui-label label_type_checkbox")
							input(class="input_type_checkbox" type="checkbox" checked)
							div(class="checkbox-text") Можно с питомцами
						label(class="label ui-label label_type_checkbox")
							input(class="input_type_checkbox" type="checkbox" checked)
							div(class="checkbox-text") Можно пригласить гостей </br>(до 10 человек)

					div(class="ui-form-block")
						h3 Radio buttons
						label(class="label ui-label label_type_radio")
							input(class="input_type_radio" type="radio" name="ui-radio" checked)
							div(class="radio-text") Мужчина
						label(class="label ui-label label_type_radio")
							input(class="input_type_radio" type="radio" name="ui-radio")
							div(class="radio-text") Женщина

					div(class="ui-form-block")
						h3 Toggle
						label(class="label ui-label label_type_toggle")
							input(class="input_type_toggle" type="checkbox" checked)
							div(class="toggle-text") Получать спецпредложения
						label(class="label ui-label label_type_toggle")
							input(class="input_type_toggle" type="checkbox")
							div(class="toggle-text") Получать спецпредложения

					div(class="ui-form-block")
						h3 Like button
						label(class="label ui-label label_type_like-button")
