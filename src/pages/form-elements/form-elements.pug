doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name='viewport' content="initial-scale=1.0, width=device-width")
        title Form elements
        link(rel="apple-touch-icon" sizes="152x152" href="favicon/apple-touch-icon.png")
        link(rel="icon" type="image/png" sizes="32x32" href="favicon/favicon-32x32.png")
        link(rel="icon" type="image/png" sizes="16x16" href="favicon/favicon-16x16.png")
        link(rel="manifest" href="favicon/site.webmanifest")
        link(rel="mask-icon" href="favicon/safari-pinned-tab.svg" color="#5bbad5")
        meta(name="msapplication-TileColor" content="#da532c")
        meta(name="theme-color" content="#ffffff")
        link(rel="stylesheet" href="form-elements.css")
    body

        include ../../common.blocks/text-field/text-field
        include ../../common.blocks/dropdown/dropdown
        include ../../common.blocks/date-dropdown/date-dropdown
        include ../../common.blocks/filter-date-dropdown/filter-date-dropdown

        include ../../common.blocks/checkbox-buttons/checkbox-buttons
        include ../../common.blocks/radio-buttons/radio-buttons
        include ../../common.blocks/toggle/toggle
        include ../../common.blocks/like-button/like-button
        include ../../common.blocks/rate-button/rate-button

        include ../../common.blocks/slider-range/slider-range
        include ../../common.blocks/button/button
        include ../../common.blocks/icon-link/icon-link
        include ../../common.blocks/pagination/pagination
        include ../../common.blocks/expandable-checkbox-list/expandable-checkbox-list
        include ../../common.blocks/rich-checkbox-buttons/rich-checkbox-buttons
        include ../../common.blocks/bullet-list/bullet-list

        include ../../common.blocks/advantages/advantages
        include ../../common.blocks/review/review

        -
            let options;
            let items;
            let dropdownContent = {
                guests: {
                    text: 'Сколько гостей',
                    items: ['Взрослые', 'Дети', 'Младенцы'],
                    buttons: ['Очистить', 'Применить']
                },
                furniture: {
                    text: 'Удобства',
                    items: ['Спальни', 'Кровати', 'Ванные комнаты'],
                    buttons: false
                }
            };
            let dateTextField = {
                maskParameters: {
                    type: 'date',
                    delimiter: '.',
                    pattern: ['d', 'm', 'Y']
                },
                placeholder: 'ДД.ММ.ГГГГ'   
            }
        
        section.form-elements
            .form-elements__logo
                include ../../common.blocks/logo/ui-logo.svg
            .form-elements__container.form-elements__container-1
                .form-elements__column-1-1.form-elements__column

                    .text-field-wrap.text-field-wrap-1
                        h3.text-field-wrap__title Text field
                        .text-field-wrap__state Default
                        +text-field({type: 'email', placeholder: 'Email'})

                    .text-field-wrap.text-field-wrap_hover.text-field-wrap-2
                        h3.text-field-wrap__title Text field
                        .text-field-wrap__state Hover / Focus
                        +text-field({value: 'This is pretty awesome'})

                    .dropdown-wrap.dropdown-wrap-1
                        h3.dropdown-wrap__title Dropdown
                        .dropdown-wrap__state Default
                        +dropdown({content: dropdownContent.guests})

                    .text-field-wrap.text-field-wrap-3
                        h3.text-field-wrap__title Masked text field
                        .text-field-wrap__state Default
                        -
                            options = {
                                maskParameters: {
                                    type: 'date',
                                    delimiter: '.',
                                    pattern: ['d', 'm', 'Y']
                                },
                                placeholder: 'ДД.ММ.ГГГГ'
                            }

                        +text-field(options)

                    .date-dropdown-wrap
                        -
                            options = {
                                firstDay: {
                                    title: 'Date dropdown',
                                },
                                lastDay: {
                                    title: 'Date dropdown',
                                    textField: {
                                        value: '19.08.2019'
                                    }
                                }
                            }
                            
                        +date-dropdown(options.firstDay, options.lastDay)

                    .filter-date-dropdown-wrap
                        +filter-date-dropdown('ui-filter-date-dropdown-1', '19 авг - 23 авг', 'Filter date dropdown')

                    .subscription-text-field-wrap
                        h3.subscription-text-field-wrap__title Subscription text field
                        +text-field({isSubscription: true, type: 'email', placeholder: 'Email'})

                .form-elements__column-1-2.form-elements__column

                    .checkbox-buttons-wrap
                        -
                            items = [
                                {text: 'Можно курить', name: 'smoking'},
                                {text: 'Можно с питомцами', name: 'pets', isChecked: true},
                                {text: 'Можно пригласить гостей (до 10 человек)', name: 'guests', isChecked: true}
                            ]

                        +checkbox-buttons('Checkbox buttons', items)

                    .radio-buttons-wrap
                        -
                            options = {
                                title: 'Radio buttons',
                                name: 'gender',
                                items: [
                                    {text: 'Мужчина', isChecked: true},
                                    {text: 'Женщина', isChecked: false}
                                ]
                            }

                        +radio-buttons(options)

                    .toggles-wrap
                        h3.toggles-wrap__title Toggle
                        .toggle-wrap
                            +toggle({text: 'Получать спецпредложения', isChecked: true})
                        .toggle-wrap
                            +toggle({text: 'Получать спецпредложения', isChecked: false})

                    .like-buttons-wrap
                        h3.like-buttons-wrap__title Like button
                        .like-button-wrap
                            +like-button(2, false)
                        .like-button-wrap
                            +like-button(12, true)

                    .rate-buttons-wrap
                        h3.rate-buttons-wrap__title Rate button
                        .rate-button-wrap
                            +rate-button('ui-rate-1', 4)
                        .rate-button-wrap
                            +rate-button('ui-rate-2', 5)

                .form-elements__column-1-3.form-elements__column

                    .slider-range-wrap
                        +slider-range('Range slider')

                    h3.buttons-wrap__title Buttons
                    .colored-buttons-wrap.buttons-wrap
                        .button-wrap
                            +button()
                        .button-wrap
                            +button()
                    .not-colored-buttons-wrap.buttons-wrap
                        .button-wrap
                            +button({isSecondary: true})
                        .button-wrap
                            +button({isSecondary: true})
                    .textual-buttons-wrap.buttons-wrap
                        .button-wrap
                            +icon-link({isPrimary: true})
                        .button-wrap
                            +icon-link()
                    .big-buttons-wrap.buttons-wrap
                        +button({isExtended: true})

                    .pagination-wrap
                        h3.pagination-wrap__title Pagination
                        +pagination(12, 101, 1)



            .form-elements__container.form-elements__container-2
                .form-elements__column-2-1.form-elements__column

                    .dropdown-wrap.dropdown-wrap-2
                        h3.dropdown-wrap__title Dropdown
                        .dropdown-wrap__state Default
                        +dropdown({content: dropdownContent.furniture, isSmall: true})

                    .dropdown-wrap.dropdown-wrap-3
                        h3.dropdown-wrap__title Dropdown
                        .dropdown-wrap__state Expanded
                        +dropdown({content: dropdownContent.furniture, isOpen: true, isSmall: true})

                .form-elements__column-2-2.form-elements__column
                    .dropdown-wrap.dropdown-wrap-4
                        h3.dropdown-wrap__title Dropdown
                        +dropdown({content: dropdownContent.guests, isOpen: true})

                .form-elements__column-2-3.form-elements__column
                    .dropdown-wrap.dropdown-wrap-5
                        h3.dropdown-wrap__title Dropdown
                        +dropdown({content: dropdownContent.guests, isOpen: true})



            .form-elements__container.form-elements__container-3
                .form-elements__column-3-1.form-elements__column
                    -
                        items = [
                            {text: 'Завтрак'},
                            {text: 'Письменный стол', isChecked: true},
                            {text: 'Стул для кормления', isChecked: true},
                            {text: 'Кроватка', isChecked: true},
                            {text: 'Телевизор'},
                            {text: 'Шампунь'},
                            {text: 'Телевизор'},
                            {text: 'Шампунь'}
                        ]

                    .expandable-checkbox-list-wrap-1
                        +expandable-checkbox-list('Expandable checkbox list', items)

                    .expandable-checkbox-list-wrap-2
                        +expandable-checkbox-list('Expandable checkbox list', items, true)

                .form-elements__column-3-2.form-elements__column
                    .rich-checkbox-buttons-wrap
                        -
                            items = [
                                {title: 'Широкий коридор', text: 'Ширина коридоров в номере не менее 91 см.'},
                                {title: 'Помощник для инвалидов', text: 'На 1 этаже вас встретит специалист и проводит до номера.'}
                            ]

                        +rich-checkbox-buttons('Rich checkbox buttons', items)

                .form-elements__column-3-3.form-elements__column
                    .bullet-list-wrap
                        -
                            items = [
                                'Нельзя с питомцами',
                                'Без вечеринок и мероприятий',
                                'Время прибытия — после 13:00, а выезд до 12:00'
                            ]

                        +bullet-list('Bullet list', items)


            .form-elements__container.form-elements__container-4
                .form-elements__column-4-1.form-elements__column
                    .advantages-wrap
                        -
                            items = [
                                {title: 'Комфорт', text: 'Шумопоглощающие стены', icon: 'insert_emoticon'},
                                {title: 'Удобство', text: 'Окно в каждой из спален', icon: 'location_city'}
                            ]

                        +advantages(items)

                .form-elements__column-4-2.form-elements__column
                    .review-wrap
                        -
                            options = {
                                avatar: 'form-elements__avatar.png', 
                                likeButton: {number: 12, isChecked: true}, 
                                name: 'Мурад Сарафанов', 
                                time: '5 дней назад', 
                                comment: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'
                            }

                        +review(options)
                        
    
        
        script(src='./form-elements.js')