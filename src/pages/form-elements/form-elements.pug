extends ../../templates/ui-kit

block vars
    - mainClass = 'form-elements';


block head
    title Form elements
    link(rel="stylesheet" href="form-elements.css")


block content
    include ../../blocks/title/title

    include ../../blocks/text-field/text-field
    include ../../blocks/dropdown/dropdown
    include ../../blocks/date-dropdown/date-dropdown
    include ../../blocks/filter-date-dropdown/filter-date-dropdown

    include ../../blocks/checkbox-button/checkbox-button
    include ../../blocks/checkbox-button-list/checkbox-button-list
    include ../../blocks/radio-buttons/radio-buttons
    include ../../blocks/toggle/toggle
    include ../../blocks/like-button/like-button
    include ../../blocks/rate-button/rate-button

    include ../../blocks/slider-range/slider-range
    include ../../blocks/button/button
    include ../../blocks/icon-link/icon-link
    include ../../blocks/pagination/pagination
    include ../../blocks/expandable-checkbox-list/expandable-checkbox-list
    include ../../blocks/bullet-list/bullet-list

    include ../../blocks/icon-text/icon-text
    include ../../blocks/icon-text-list/icon-text-list
    include ../../blocks/review/review

    include ../../blocks/titled-block/titled-block

    -
        let dropdownContent = {
            guests: {
                text: 'Сколько гостей',
                items: ['взрослые', 'дети', 'младенцы'],
                buttons: ['Очистить', 'Применить']
            },
            furniture: {
                text: 'Удобства',
                items: ['спальни', 'кровати', 'ванные комнаты'],
                buttons: false
            }
        };
    
    .form-elements__container.form-elements__container-1
        .form-elements__column-1-1.form-elements__column

            .text-field-wrap.text-field-wrap-1
                h3.text-field-wrap__title Text field
                .text-field-wrap__state Default
                +text-field({type: 'email', placeholder: 'Email'})


            .text-field-wrap.text-field-wrap_hover.text-field-wrap-2
                h3.text-field-wrap__title Text field
                .text-field-wrap__state Hover / Focus
                +text-field({value: 'This is pretty awesome'})

            .dropdown-wrap.dropdown-wrap-1
                h3.dropdown-wrap__title Dropdown
                .dropdown-wrap__state Default
                +dropdown({content: dropdownContent.guests})

            .text-field-wrap.text-field-wrap-3
                h3.text-field-wrap__title Masked text field
                .text-field-wrap__state Default
                -
                    options = {
                        maskParameters: {
                            type: 'date',
                            delimiter: '.',
                            pattern: ['d', 'm', 'Y']
                        },
                        placeholder: 'ДД.ММ.ГГГГ'
                    }
                +text-field(options)

            .date-dropdown-wrap
                -
                    options = {
                        firstDate: {
                            title: 'Date dropdown'
                        },
                        lastDate: {
                            title: 'Date dropdown',
                            date: '19.08.2019'
                        },
                        placeholder: 'ДД.ММ.ГГГГ'
                    }
                    
                +date-dropdown(options)

            .filter-date-dropdown-wrap
                -
                    options = {
                        title: 'Filter date dropdown',
                        firstDate: '19.08.2019',
                        lastDate: '23.08.2019',
                        buttons: ['Очистить', 'Применить'],
                        language: 'ru'
                    }
                +filter-date-dropdown(options)

            .subscription-text-field-wrap
                h3.subscription-text-field-wrap__title Subscription text field
                +text-field({isSubscription: true, type: 'email', placeholder: 'Email'})

        .form-elements__column-1-2.form-elements__column

            .checkbox-button-list-wrap
                -
                    options = {
                        title: 'Checkbox Buttons',
                        items: [
                            {text: 'Можно курить'},
                            {text: 'Можно с питомцами', isChecked: true},
                            {text: 'Можно пригласить гостей (до 10 человек)', isChecked: true}
                        ]
                    }

                +checkbox-button-list(options)

            .radio-buttons-wrap
                -
                    options = {
                        title: 'Radio buttons',
                        name: 'gender',
                        items: [
                            {text: 'Мужчина', isChecked: true},
                            {text: 'Женщина', isChecked: false}
                        ]
                    }

                +radio-buttons(options)

            .toggles-wrap
                h3.toggles-wrap__title Toggle
                .toggle-wrap
                    +toggle({text: 'Получать спецпредложения', isChecked: true})
                .toggle-wrap
                    +toggle({text: 'Получать спецпредложения', isChecked: false})

            .like-buttons-wrap
                h3.like-buttons-wrap__title Like button
                .like-button-wrap
                    +like-button({number: 2})
                .like-button-wrap
                    +like-button({number: 12, isChecked: true})

            .rate-buttons-wrap
                h3.rate-buttons-wrap__title Rate button
                .rate-button-wrap
                    +rate-button({rate: 4})
                .rate-button-wrap
                    +rate-button({rate: 5})

        .form-elements__column-1-3.form-elements__column

            .slider-range-wrap
                +slider-range('Range slider')

            h3.buttons-wrap__title Buttons
            .colored-buttons-wrap.buttons-wrap
                .button-wrap
                    +button()
                .button-wrap.button-wrap-on-hover
                    +button()
            .not-colored-buttons-wrap.buttons-wrap
                .button-wrap
                    +button({isSecondary: true})
                .button-wrap.button-wrap-on-hover
                    +button({isSecondary: true})
            .textual-buttons-wrap.buttons-wrap
                .button-wrap
                    +icon-link({isPrimary: true})
                .button-wrap
                    +icon-link()
            .big-buttons-wrap.buttons-wrap
                +button({isExtended: true, text: 'Перейти к оплате'})

            .pagination-wrap
                h3.pagination-wrap__title Pagination
                +pagination({items: 12, max: 101, page: 1, text: ['из', 'вариантов аренды']})


    .form-elements__container.form-elements__container-2
        .form-elements__column-2-1.form-elements__column

            .dropdown-wrap.dropdown-wrap-2
                h3.dropdown-wrap__title Dropdown
                .dropdown-wrap__state Default
                +dropdown({content: dropdownContent.furniture, isSmall: true})

            .dropdown-wrap.dropdown-wrap-3
                h3.dropdown-wrap__title Dropdown
                .dropdown-wrap__state Expanded
                +dropdown({content: dropdownContent.furniture, isOpen: true, isSmall: true})

        .form-elements__column-2-2.form-elements__column
            .dropdown-wrap.dropdown-wrap-4
                h3.dropdown-wrap__title Dropdown
                +dropdown({content: dropdownContent.guests, isOpen: true})

        .form-elements__column-2-3.form-elements__column
            .dropdown-wrap.dropdown-wrap-5
                h3.dropdown-wrap__title Dropdown
                +dropdown({content: dropdownContent.guests, isOpen: true})


    .form-elements__container.form-elements__container-3
        .form-elements__column-3-1.form-elements__column
            -
                items = [
                    {text: 'Завтрак'},
                    {text: 'Письменный стол', isChecked: true},
                    {text: 'Стул для кормления', isChecked: true},
                    {text: 'Кроватка', isChecked: true},
                    {text: 'Телевизор'},
                    {text: 'Шампунь'},
                    {text: 'Телевизор'},
                    {text: 'Шампунь'}
                ]

            .expandable-checkbox-list-wrap-1
                -
                    options = {
                        title: 'Expandable checkbox list',
                        items: items
                    }

                +expandable-checkbox-list(options)

            .expandable-checkbox-list-wrap-2
                -
                    options = {
                        title: 'Expandable checkbox list',
                        items: items,
                        isOpen: true
                    }

                +expandable-checkbox-list(options)

        .form-elements__column-3-2.form-elements__column
            .rich-checkbox-buttons-wrap
                -
                    options = {
                        title: 'Rich checkbox buttons',
                        items: [
                            {
                                richText: 'Широкий коридор',
                                text: 'Ширина коридоров в номере не менее 91 см.'   
                            },
                            {
                                richText: 'Помощник для инвалидов',
                                text: 'На 1 этаже вас встретит специалист и проводит до номера.'                                        
                            }
                        ]
                    }
                
                +checkbox-button-list(options)

        .form-elements__column-3-3.form-elements__column
            .bullet-list-wrap
                -
                    items = [
                        'Нельзя с питомцами',
                        'Без вечеринок и мероприятий',
                        'Время прибытия — после 13:00, а выезд до 12:00'
                    ]

                +bullet-list({title: 'Bullet list', items: items})


    .form-elements__container.form-elements__container-4
        .form-elements__column-4-1.form-elements__column
            .advantages-wrap
                -
                    items = [
                        {richText: 'Комфорт', text: 'Шумопоглощающие стены', icon: 'insert_emoticon'},
                        {richText: 'Удобство', text: 'Окно в каждой из спален', icon: 'location_city'}
                    ]

                +icon-text-list(items)

        .form-elements__column-4-2.form-elements__column
            .review-wrap
                -
                    options = {
                        avatar: 'form-elements__avatar.png', 
                        likeButton: {number: 12, isChecked: true}, 
                        name: 'Мурад Сарафанов', 
                        time: '5 дней назад', 
                        text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'
                    }

                +review(options)

block script
    script(src='./form-elements.js')