doctype html
html(lang="ru")
	head
		meta(charset = 'utf-8')
		meta(name='viewport' content="initial-scale=1.0, width=device-width")
		title Landing page
		link(rel="apple-touch-icon" sizes="152x152" href="favicon/apple-touch-icon.png")
		link(rel="icon" type="image/png" sizes="32x32" href="favicon/favicon-32x32.png")
		link(rel="icon" type="image/png" sizes="16x16" href="favicon/favicon-16x16.png")
		link(rel="manifest" href="favicon/site.webmanifest")
		link(rel="mask-icon" href="favicon/safari-pinned-tab.svg" color="#5bbad5")
		meta(name="msapplication-TileColor" content="#da532c")
		meta(name="theme-color" content="#ffffff")
		link(rel="stylesheet" href="landing-page.css")
	body.landing-page.page_language_ru
		.landing-page__front.background-image(style=`background-image: url( ${require('./images/landing-page__front.jpg')})`)
			include ../../components/header/header.pug
			+header(
				"landing-page__header header_language_ru",
			[
				{name: "О нас", href: "#"},
				{name: "Услуги", href: "#", arrow: true},
				{name: "Вакансии", href: "#"},
				{name: "Новости", href: "#"},
				{name: "Соглашения", href: "#", arrow: true},
			],
				{name: "Войти"}, 
				{name: "Зарегистрироваться"}, 
				{name: "Cosmin Negoita", class: "hidden"}
			)
			.container.front__container
				include ../../components/search-card/search-card.pug
				.front__text
					p Лучшие номера для вашей работы, отдыха и просто вдохновения
		
			include ../../components/footer/footer.pug
			+footer(
				"landing-page__footer",
				"Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»",
				[
					{title: "Навигация", items: ["О нас", "Новости", "Служба поддержки", "Услуги"]},
					{title: "О нас", items: ["О сервисе", "Наша команда", "Вакансии", "Инвесторы"]},
					{title: "Служба поддержки", items: ["Соглашения", "Сообщества", "Связь с нами"]}
				],
				{title: "Подписка", text: "Получайте специальные предложения и новости сервиса", button_text: "Email"},
				"Copyright © 2018 Toxin отель. Все права зачищены."
			)

		script(src="landing-page.js")
		
